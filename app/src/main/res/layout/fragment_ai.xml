<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Initial Ask GenAI Button -->
    <Button
        android:id="@+id/buttonAskGenAi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask GenAI"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView for chat messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewResponses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scrollViewOptions"
        android:visibility="gone"/>

    <!-- ScrollView for options -->
    <ScrollView
        android:id="@+id/scrollViewOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/bottomMenuContainer"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/buttonSummarizeWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summarize My Week"/>

            <Button
                android:id="@+id/buttonRescheduleTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reschedule Tasks"/>

            <Button
                android:id="@+id/buttonSuggestTimeSlots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suggest Free Time Slots"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Menu Container -->
    <LinearLayout
        android:id="@+id/bottomMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <!-- Collapsed menu -->
        <LinearLayout
            android:id="@+id/collapsedMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Expanded menu -->
        <LinearLayout
            android:id="@+id/expandedMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Menu"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/closeMenuButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_close"/>
            </LinearLayout>

            <Button
                android:id="@+id/summarizeTasksButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summarize My Tasks"
                android:textAlignment="textStart"
                android:padding="12dp"/>

            <Button
                android:id="@+id/rescheduleTasksButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reschedule Tasks"
                android:textAlignment="textStart"
                android:padding="12dp"/>

            <Button
                android:id="@+id/suggestTimeButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suggest Free Time"
                android:textAlignment="textStart"
                android:padding="12dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>